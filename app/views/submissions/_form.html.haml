= form_for @submission do |f|
  -if @submission.errors.any?
    #error_explanation
      %h2= "#{pluralize(@submission.errors.count, "error")} prohibited this submission from being saved:"
      %ul
        - @submission.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :headline
    = f.text_field :headline
  .field
    = f.label :byline
    = f.text_field :byline
  .field
    = f.label :body
    = f.hidden_field :body
    %div{:id => 'submission_body_editable', :class => 'editable', :contenteditable => "true", :style => "height: 400px; width: 400px; background: white;"}
      %p Start writing here.
  .actions
    = f.submit 'Save', :id => "submission_save"
